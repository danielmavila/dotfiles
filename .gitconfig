[user]
  name  = Daniel Avila
  email = me@danielmavila.com

[alias]
  amend = commit --amend
  it    = !git init && git commit -m \"Initial commit\" --allow-empty
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[color]
  ui = auto

[core]
  editor = /usr/bin/vim
